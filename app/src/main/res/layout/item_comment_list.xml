<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:padding="15dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:padding="5dp"
        android:id="@+id/comment_head"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/my_interest_boy"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_marginStart="15dp"
        android:textSize="15sp"
        android:textColor="@color/tab_sel"
        android:id="@+id/comment_idName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/comment_head"
        tools:text="王尼玛" />

    <TextView
        android:layout_below="@id/comment_idName"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/comment_head"
        android:id="@+id/comment_comment"
        android:layout_marginTop="2dp"
        android:textSize="12sp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@id/comment_pub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/comment_pub"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
         />


</RelativeLayout>

